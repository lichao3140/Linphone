		<item name="android:taskToFrontEnterAnimation">@null</item>
		<item name="android:taskToFrontExitAnimation">@null</item>
		<item name="android:taskToBackEnterAnimation">@null</item>
		<item name="android:taskToBackExitAnimation">@null</item>
	</style>

	<!-- 为 闪屏页Theme 设置背景图 -->
	<style name="ThemeSplash" parent="Theme.AppCompat">
		<item name="android:background">@drawable/launch_background</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Popupwindow">
		<item name="android:windowEnterAnimation">@anim/from_down_to_up</item>
		<item name="android:windowExitAnimation">@anim/from_up_to_down</item>
	</style>
